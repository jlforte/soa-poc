<?xml version = "1.0" encoding = "UTF-8"?>
<jbossesb xmlns="http://anonsvn.labs.jboss.com/labs/jbossesb/trunk/product/etc/schemas/xml/jbossesb-1.0.1.xsd"
          parameterReloadSecs="5">
    <providers>
        <jms-provider name="JBossMQ" connection-factory="ConnectionFactory">
            <jms-bus busid="gnwCreditOmniGwChannel">
                <jms-message-filter dest-type="QUEUE"
                                    dest-name="queue/gnw_credit_omni_Request_gw"/>
            </jms-bus>
            <jms-bus busid="gnwCreditOmniEsbChannel">
                <jms-message-filter
                        dest-type="QUEUE"
                        dest-name="queue/gnw_credit_omni_Request_esb"/>
            </jms-bus>

        </jms-provider>
    </providers>
    <services>
        <service
                category="FirstServiceESB"
                name="SimpleListener"
                description="Hello World">
            <listeners>
                <jms-listener name="JMS-Gateway"
                              busidref="gnwCreditOmniGwChannel"
                              is-gateway="true"/>
                <jms-listener name="helloWorld"
                              busidref="gnwCreditOmniEsbChannel"/>
            </listeners>
            <actions mep="OneWay">
                <action name="action1"
                        class="com.gnw.credit_omni.soap.actions.JMSListenerAction"
                        process="displayMessage"/>
                <action name="action2" class="org.jboss.soa.esb.actions.SystemPrintln">
                    <property name="printfull" value="false"/>
                </action>
                <!-- The next action is for Continuous Integration testing -->
                <action name="testStore" class="org.jboss.soa.esb.actions.TestMessageStore"/>
            </actions>
        </service>
    </services>
</jbossesb>
